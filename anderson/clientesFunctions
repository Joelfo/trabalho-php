//Cadastrar Cliente
 
function CadastrarCliente($nome, $cpf, $endereco, $bairro, $cidade, $uf, $cep, $telefone, $email){
    $mysqli = new mysqli("localhost","root","","estoque");
    $mysqli -> set_charset("utf8");
   $sql= "INSERT INTO clientes (nome, cpf, endereco, bairro, cidade, uf, cep, telefone, email) 
   VALUES ('$nome', $cpf, '$endereco', '$bairro', '$cidade', '$uf', $cep, $telefone, '$email')";
  

   if ($mysqli->query($sql) === TRUE) {
    echo "Cliente adicionado";
    header("http://localhost/trabalho-php/anderson/teste.php");
  } else {
    echo "Error: " . $sql . "<br>" . $mysqli->error;
  }
}

// função para  listar todos  os  clientes

function ListarClientes(){
  
 $sql= "Select * from  clientes";
 $result= $mysqli->query($sql);

echo (" <table>
     <tr>
         <td>ID</td>
         <td>Nome</td>
         <td>Cidade</td> 
         <td></td>
         <td></td>
     </tr>");
     
         while($dado = $result->fetch_array(MYSQLI_ASSOC) ){ // coloca o  resultado da  query  em um array com  nome  da  coluna                         
              echo( "<tr>
                  <td>".$dado["id"]." </td>
                  <td>'".  $dado["nome"]." </td>
                  <td>". $dado["cidade"]." </td>                      
                  <td> <a href='atualizarCliente.php?'>Atualizar</a> </td>
                  <td><a href='excluirCliente.php?id=$dado[id]' >
                  
                  <i class='bi bi-trash3-fill'><svg xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' class='bi bi-trash3-fill' viewBox='0 0 16 16'>
                  <path d='M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z'/>
                </svg></i></a></td>                  
              </tr> ");
              

             }                   
             echo ("</table>");
      }


      // Função para deletar clientes

      function DeletarCliente ($id) {
        
            $mysqli = new mysqli("localhost","root","","estoque");
           $sql= "DELETE FROM clientes where id = $id ";
           $mysqli->query($sql);
           header("Location:cliente.php");

      }



